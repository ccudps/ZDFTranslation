{
    "manifest_version": 3,
    "name": "ZDF Lingua",
    "version": "1.0",
    "description": "Learn German with real-time translations on zdf.de",
    "permissions": [
        "storage"
    ],
    "host_permissions": [
        "https://*.zdf.de/*",
        "https://*.ardmediathek.de/*",
        "https://api.openai.com/*",
        "https://generativelanguage.googleapis.com/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://*.zdf.de/*",
                "https://*.ardmediathek.de/*"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "styles.css"
            ]
        }
    ],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "injected.js"
            ],
            "matches": [
                "https://*.zdf.de/*",
                "https://*.ardmediathek.de/*"
            ]
        }
    ]
}